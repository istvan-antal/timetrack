{
    "compilerOptions": {
        "lib": [
            "es2015",
            "es2015.promise",
            "es2017",
            "es2017.object",
            "dom"
        ],
        "types": [
            "node",
            "jest"
        ],
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowJs": false,
        "checkJs": false,
        "outDir": "./build",
        "rootDir": "./src",
        "noEmit": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules",
        "TimeTrack-darwin-x64",
        "build",
        "dist"
    ]
}
